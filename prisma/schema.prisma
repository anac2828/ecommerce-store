// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id                      String  @id @default(uuid())
  name                    String
  priceInCents            Int
  filePath                String
  imagePath               String
  description             String
  isAvailableForPurchase  Boolean   @default(true)
  createdAt               DateTime  @default(now())
  updatedAt               DateTime  @updatedAt
  orders Order[]
  downloadVerifications DownloadVerification[]
}

model User {
  id            String  @id @default(uuid())
  email         String  @unique
  createdAt               DateTime  @default(now())
  updatedAt               DateTime  @updatedAt
  orders  Order[]
}

model Order {
  id                      String  @id @default(uuid())
  pricePaidInCents        Int
  createdAt               DateTime  @default(now())
  updatedAt               DateTime  @updatedAt

// onDelete: Cascade - will delete all orders associated with the deleted user
// onDelete: Restric - will not delete the product if the order is deleted
  userId  String
  productId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Restrict)
}

// onDelete: Cascade - will delete the DownloadVerification if the product is deleted
model DownloadVerification {
  id                      String  @id @default(uuid())
  createdAt               DateTime  @default(now())
  expiresAt               DateTime
  productID String
  product Product @relation(fields: [productID], references: [id], onDelete: Cascade)
}